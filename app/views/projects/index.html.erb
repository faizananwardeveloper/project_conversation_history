<h1 class="text-2xl font-bold mb-4">Projects</h1>
<%= link_to "New Project", new_project_path, class: "text-blue-500 underline" %>
<ul class="mt-4">
  <% @projects.each do |project| %>
    <li class="mb-2">
      <%= link_to project.title, project_path(project), class: "text-lg text-indigo-600 hover:underline" %>
    </li>
  <% end %>
</ul>